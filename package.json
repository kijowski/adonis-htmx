{
  "name": "adonis-htmx",
  "version": "0.3.0",
  "description": "HTMX helpers and JSX renderer for the Adonis web framework",
  "type": "module",
  "main": "build/index.js",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./headers": "./build/src/headers.js",
    "./provider": "./build/src/providers/htmx_provider.js"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy-stubs": "copyfiles -u 2 \"src/stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "precompile": "npm run lint && npm run clean",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "build": "npm run compile",
    "postbuild": "npm run copy-stubs",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "release": "np",
    "version": "npm run build",
    "test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts"
  },
  "keywords": [
    "htmx",
    "tsx-templating",
    "adonis",
    "adonisjs"
  ],
  "author": "Micha≈Ç Kijowski",
  "license": "MIT",
  "dependencies": {
    "@adonisjs/vite": "^3.0.0",
    "@kitajs/html": "^4.1.0",
    "@kitajs/ts-html-plugin": "^4.0.1"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.2.3",
    "@adonisjs/eslint-config": "^1.2.1",
    "@adonisjs/prettier-config": "^1.2.1",
    "@adonisjs/tsconfig": "^1.2.1",
    "@japa/assert": "^2.1.0",
    "@japa/runner": "^3.1.1",
    "@swc/core": "^1.3.102",
    "@types/node": "^20.10.6",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "np": "^9.2.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kijowski/adonis-htmx.git"
  },
  "bugs": {
    "url": "https://github.com/kijowski/adonis-htmx/issues"
  },
  "homepage": "https://github.com/kijowski/adonis-htmx#readme",
  "prettier": "@adonisjs/prettier-config",
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "tsup": {
    "entry": [
      "./index.ts",
      "./src/headers.ts",
      "./src/types.ts",
      "./src/providers/htmx_provider.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  },
  "np": {
    "message": "Release: %s",
    "tag": "latest",
    "branch": "master",
    "anyBranch": false
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  }
}
